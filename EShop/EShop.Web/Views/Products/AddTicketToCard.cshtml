@model EShop.Domain.DTO.AddToShoppingCardDto

@{
ViewData["Title"] = "Ticket Sale";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Add selected ticket to your shopping cart!</h3>
<div class="row mt-4">
    <div class="col-md-4 m-auto">
        <form method="post" asp-action="AddTicketToCart">
            <input type="hidden" asp-for="SelectedTicketId"/>
            <div class="form-group">
                <label asp-for="SelectedTicket.TicketName"></label>
                <input disabled asp-for="SelectedTicket.TicketName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Add to Cart" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>